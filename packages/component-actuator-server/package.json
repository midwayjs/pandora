{
  "name": "@pandorajs/component-actuator-server",
  "version": "2.2.0",
  "description": "Pandora 2 Component Actuator Server",
  "main": "build/src/ComponentActuatorServer.js",
  "typings": "build/src/ComponentActuatorServer.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "test": "NODE_ENV=unittest mocha",
    "cov": "nyc mocha",
    "ci": "npm run test",
    "gen-api-ref": "../../node_modules/.bin/typedoc --mode file --hideGenerator --excludeExternals --ignoreCompilerErrors --out ../../docs/.vuepress/dist/api-reference/env src/"
  },
  "keywords": [
    "pandora"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/extend": "^3.0.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.0.0",
    "chai": "^3.5.0",
    "mm": "^2.1.0",
    "mocha": "^7.1.2",
    "nyc": "^13.1.0",
    "supertest": "^3.3.0"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "dist",
      "src/types.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  },
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.d.ts"
  ],
  "dependencies": {
    "@pandorajs/component-decorator": "^2.1.2",
    "@pandorajs/dollar": "^2.1.2",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0"
  }
}
