{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "stripInternal": true,
        "pretty": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "files": [
        "src/index"
    ]
}
