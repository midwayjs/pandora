{
  "compilerOptions": {
    "allowJs": false,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots" : ["./d.ts/", "./node_modules/@types/"]
  },
  "files": [
    "src/index.ts",
    "src/default.ts"
  ],
  "exclude": [
    "node_modules",
    "doc"
  ]
}
