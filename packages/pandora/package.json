{
  "name": "pandora",
  "version": "1.6.1",
  "description": "A powerful and lightweight application manager for Node.js applications powered by TypeScript.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "pandora": "bin/pandora"
  },
  "scripts": {
    "build": "npm run lint && rm -rf ./dist && ../../node_modules/.bin/tsc",
    "start": "npm run build && node dist/index",
    "lint": "../../node_modules/.bin/tslint --format prose -c ../../tslint.json src/**/*.ts test/**/*.ts",
    "test": "npm run lint && NODE_ENV=unittest mocha --trace-warnings",
    "cov": "NODE_ENV=unittest nyc mocha",
    "ci": "npm run test",
    "gen-api-ref": "../../node_modules/.bin/typedoc --mode file --hideGenerator --excludeExternals --ignoreCompilerErrors --out ../../run/site/public/api-reference/pandora src/"
  },
  "keywords": [
    "pandora",
    "cluster"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/midwayjs/pandora.git"
  },
  "license": "MIT",
  "dependencies": {
    "cfork": "^1.6.1",
    "chalk": "^2.1.0",
    "colors": "^1.1.2",
    "commander": "^2.11.0",
    "debug": "^2.6.8",
    "delegates": "^1.0.0",
    "egg-logger": "^1.6.0",
    "extend": "^3.0.1",
    "inquirer": "^4.0.1",
    "is-type-of": "^1.2.0",
    "mkdirp": "^0.5.1",
    "module-hook": "^1.0.0",
    "moment": "^2.18.1",
    "mz": "^2.7.0",
    "pandora-dollar": "^1.6.1",
    "pandora-env": "^1.6.1",
    "pandora-hook": "^1.6.1",
    "pandora-hub": "^1.6.1",
    "pandora-messenger": "^1.6.1",
    "pandora-metrics": "^1.6.1",
    "pandora-service-logger": "^1.6.1",
    "pandora-spawn-wrap": "^1.0.1",
    "read-last-lines": "^1.2.0",
    "sdk-base": "^2.0.1",
    "shimmer": "^1.1.0",
    "source-map-support": "^0.4.15",
    "table": "^4.0.1",
    "tail": "^1.2.3",
    "treeify": "^1.0.1",
    "yargs": "^10.0.3"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^2.2.41",
    "@types/mz": "^0.0.32",
    "@types/node": "^8.5.2",
    "chai": "^3.5.0",
    "chai-as-promised": "^7.1.1",
    "mm": "^2.1.0",
    "mocha": "^3.5.0",
    "nyc": "^11.2.1",
    "nyc-ts-patch": "^1.0.0",
    "urllib": "^2.24.0"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "src/debug",
      "src/index.ts",
      "src/domain.ts",
      "typings",
      "doc",
      "test.bak",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "json",
      "html",
      "lcovonly"
    ],
    "all": true
  },
  "files": [
    "3rd",
    "bin",
    "cli",
    "d.ts",
    "dist",
    "src",
    "logo"
  ]
}
