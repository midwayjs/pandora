{
  "compilerOptions": {
    "allowJs": false,
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots" : ["./d.ts/", "./node_modules/@types/"]
  },
  "include": [
    "src/**/*",
    "d.ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
