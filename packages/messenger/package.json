{
  "name": "@pandorajs/messenger",
  "version": "3.0.0-alpha.0",
  "description": "pandora.js messenger module",
  "main": "build/src/index.js",
  "typings": "build/src/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "test": "mocha",
    "cov": "nyc mocha",
    "ci": "npm run test"
  },
  "keywords": [
    "pandora",
    "messenger"
  ],
  "license": "MIT",
  "dependencies": {
    "debug": "^2.6.8",
    "is-type-of": "^1.2.0",
    "sdk-base": "^2.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.0.0",
    "chai": "^4.2.0",
    "mocha": "^7.1.2",
    "nyc": "^13.1.0",
    "pedding": "^1.1.0",
    "should": "^11.2.1",
    "uncaughtException": "^1.0.0"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "**/*.d.ts",
      "dist"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "json",
      "html",
      "lcovonly"
    ],
    "all": true
  },
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.d.ts",
    "d.ts"
  ]
}
